<%= form_with model: @passenger, class: 'passenger-form' do |f| %>

  <%# adding validation error messages on top if any %>
  <% if @passenger.errors.any? %>
    <ul>
      <% @passenger.errors.each do |column, message| %>
        <li>
          <p><%= column %> <%= message %></p>
        </li>  
      <% end %>
    </ul>
  <% end %>


  <form class='form-group row'>
    <div class='col-2'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='col-2'>
      <%= f.label :phone_num%>
      <%= f.text_field :phone_num%>
    </div>
    <br>
    <div class="col-2">
      <%= f.submit action_name, class: 'btn btn-outline-secondary btn-sm' %>
    </div>
  </form>

<%end%>