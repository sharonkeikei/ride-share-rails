<div class="passenger-container">
  <h3>Passengers info</h3>
  <table class="table table-hover table-bordered tbl-passenger ">
    <thead class="thead-light" >
      <tr>
        <th>ID </th>
        <th>Name </th>
        <th>Phone Number </th>
        <th>Delete</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% if @passengers.length > 0 %>
        <% @passengers.each do |passenger| %>
          <tr>
            <td><%= passenger.id %></td>
            <td><%= link_to passenger.name, passenger_path(passenger.id) %></td>
            <td><%= passenger.phone_num %></td>
            <td><%= link_to 'Edit',
              edit_passenger_path(passenger.id),
              class: 'btn btn-outline-secondary btn-sm'
            %></td>
            <td><%= link_to 'Delete',
              passenger_path(passenger.id),
              class: 'btn btn-outline-danger btn-sm',
              method: :delete,
              data: { confirm: 'Are you sure?'}
            %></td>
          </tr>
        <%end%>
      <% else %>
        <h3> No passengers currently in the system!</h3>
      <% end %>
    </tbody>
  </table>
</div>