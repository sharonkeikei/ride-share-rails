<%= form_with model: @trip, class: 'trip-form' do |f| %>

  <%# adding validation error messages on top if any %>
  <% if @trip.errors.any? %>
    <ul>
      <% @trip.errors.each do |column, message| %>
        <li>
          <p><%= column %> <%= message %></p>
        </li>  
      <% end %>
    </ul>
  <% end %>


  <form class='form-group row'>
    <div class='col-2'>
      <%= f.label :date%>
      <%= f.date_field :date%>
    </div>
    <div class='col-2'>
      <%= f.label :cost %>
      <%= f.text_field :cost %>
    </div>
    <div>
      <%= f.label :rating %>
      <%= f.select :rating, [1, 2, 3, 4, 5] %>
    </div>
    <br>
    <div class="col-2">
      <%= f.submit "Edit Trip", class: 'btn btn-outline-secondary btn-sm' %>
    </div>
  </form>

<%end%>